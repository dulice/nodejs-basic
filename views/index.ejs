<!DOCTYPE html>
<html lang="en">
<%- include('header') %>
<body>
    <div class="container">
        <%- include('nav') %>

        <% if(blogs.length > 0) { %>
            <% blogs.forEach(blog=> { %>
                <a class="blog" href="/blogs/<%= blog._id %>">
                    <h3>
                        <%= blog.title %>
                    </h3>
                    <p>
                        <%= blog.snippet %>
                    </p>
                </a>
                <% }) %>
            <% } else { %>
                <p>There is no blog to show.</p>
            <% } %>
    </div>
    <%- include('footer') %>
</body>

</html>